<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Zurück Button oben links -->
    <Button
        android:id="@+id/back_to_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"/>

    <!-- LinearLayout für Brotprodukte -->
    <LinearLayout
        android:id="@+id/bread_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_to_main_button"
        android:orientation="vertical"
        android:layout_above="@+id/to_cart_button">

        <!-- Einzelne Brotarten mit Kaufen-Buttons -->
        <!-- Brötschen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brötschen"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaufen"
                android:id="@+id/buy_broetchen_button"/>
        </LinearLayout>

        <!-- Kaiserbrötschen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kaiserbrötschen"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaufen"
                android:id="@+id/buy_kaiserbroetchen_button"/>
        </LinearLayout>

        <!-- Schwarzbrot -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Schwarzbrot"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaufen"
                android:id="@+id/buy_schwarzbrot_button"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Button zum Warenkorb unten rechts -->
    <Button
        android:id="@+id/to_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warenkorb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
