<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Zurück Button oben links -->
    <Button
        android:id="@+id/back_to_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"/>

    <!-- LinearLayout für Früchte -->
    <LinearLayout
        android:id="@+id/fruit_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_to_main_button"
        android:orientation="vertical"
        android:layout_above="@+id/to_cart_button">

        <!-- Einzelne Früchte mit Kaufen-Buttons -->
        <!-- Erdbeere -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Erdbeere"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaufen"
                android:id="@+id/buy_erdbeere_button"/>
        </LinearLayout>

        <!-- Banane -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Banane"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaufen"
                android:id="@+id/buy_banane_button"/>
        </LinearLayout>

        <!-- Himbeere -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Himbeere"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaufen"
                android:id="@+id/buy_himbeere_button"/>
        </LinearLayout>
        <!-- Hier könnten weitere Früchte hinzugefügt werden -->
    </LinearLayout>

    <!-- Button zum Warenkorb unten rechts -->
    <Button
        android:id="@+id/to_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warenkorb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
