<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoppingMenu"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/back_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:id="@+id/cart_button"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"
        android:contentDescription="@string/cart_description"
        android:src="@drawable/ic_cart" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/fruit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Früchte"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/sweets_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Süßigkeiten"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/bread_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Brot"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</RelativeLayout>
